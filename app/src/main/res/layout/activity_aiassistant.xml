<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context=".views.activitys.AIAssistantActivity">

    <include
        android:id="@+id/title_header_ai_assistant"
        layout="@layout/message_header_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_ai_assistant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_header_ai_assistant">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ai_assistant_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>