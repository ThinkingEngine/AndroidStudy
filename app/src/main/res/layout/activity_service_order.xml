<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.activitys.ServiceOrderActivity">

    <com.chengsheng.cala.htcm.widget.AppTitleBar
        android:id="@+id/at_service_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/service_order_select_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/at_service_order"
        app:tabBackground="@color/colorWhite"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorThrText" />


    <android.support.v4.view.ViewPager
        android:id="@+id/service_order_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/service_order_select_header" />


</RelativeLayout>