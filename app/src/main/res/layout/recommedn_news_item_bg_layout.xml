<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/commend_news_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_header_icon"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            fresco:actualImageScaleType="centerInside"
            fresco:backgroundImage="@color/colorPrimary"
            fresco:roundedCornerRadius="8dp"/>


        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"
            android:layout_toRightOf="@id/news_header_icon"
            android:text="失眠也分类型，你是哪一种？不同类型不同解决办法"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/news_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="14dp"
            android:layout_toRightOf="@id/news_header_icon"
            app:atg_backgroundColor="@color/colorWhite"
            app:atg_borderColor="@color/colorPrimary"
            app:atg_borderStrokeWidth="1dp"
            app:atg_isAppendMode="false"
            app:atg_textColor="@color/colorPrimary"
            app:atg_textSize="10sp" />
        <TextView
            android:id="@+id/collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="104dp"
            android:layout_marginBottom="14dp"
            android:text="5426"
            android:textColor="@color/colorThrText"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@id/collect_num"
            android:src="@mipmap/soucang_wei" />

        <TextView
            android:id="@+id/browse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:text="5426"
            android:textColor="@color/colorThrText"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@id/browse_num"
            android:src="@mipmap/yulan" />

        <LinearLayout
            android:id="@+id/news_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:background="@color/colorCutoff"
            android:orientation="vertical" />
    </RelativeLayout>

</LinearLayout>
