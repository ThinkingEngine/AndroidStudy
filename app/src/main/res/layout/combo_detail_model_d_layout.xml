<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/combo_brief_coatiner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/line9"
            android:background="@drawable/has_bottom_line_item_bg">
            <ImageView
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:src="@mipmap/dabiaoti_shuxian"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐简介"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/combo_brief_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/combo_brief_coatiner"
            android:textSize="14sp"
            android:textColor="@color/colorSecText"
            android:text="检查体重是否正常，有无体重过低、超重或肥胖；有无血压脉搏异常检查体重是否正常，有无体重过低、超重或肥胖；有无血压脉。"/>
    </RelativeLayout>
</FrameLayout>
