<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context=".module.activitys.ExamResultUnscrambleActivity">

    <include
        android:id="@+id/title_header_exam_result_unscramble"
        layout="@layout/message_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tips"
        android:layout_below="@id/title_header_exam_result_unscramble">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/title_header_exam_result_unscramble"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/exam_item_image_mark"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/xin" />

                <TextView
                    android:id="@+id/exam_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/exam_item_image_mark"
                    android:text="普通检查"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/exam_abnormal_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:text="异常项数"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doc_signature_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_container"
                android:background="@color/colorContainerBG">

                <TextView
                    android:id="@+id/doc_result_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:text="小结：肺部有杂音"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="81dp"
                    android:layout_height="29dp"
                    android:layout_below="@id/doc_result_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:src="@color/colorPrimary" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/doc_signature_mark_b"
                    android:layout_width="81dp"
                    android:layout_height="29dp"
                    android:layout_below="@id/doc_result_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:backgroundImage="@mipmap/morentouxiang_wode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doc_result_text"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/doc_signature_mark_b"
                    android:text="分检医生" />
            </RelativeLayout>

            <com.chengsheng.cala.htcm.widget.MyRecyclerView
                android:id="@+id/exam_detail_type_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_signature_container"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tips"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="温馨提示：此次体检结果，仅对本次查体，检查、检验样本负责。
本报告不能用于二次诊断或其他任何医学判断目的使用。"
        android:textColor="@color/colorSecText"
        android:textSize="10dp" />
</RelativeLayout>