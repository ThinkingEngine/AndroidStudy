<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:background="@color/colorWhite">

        <GridView
            android:id="@+id/price_selecter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:numColumns="2">

        </GridView>

        <TextView
            android:id="@+id/price_selecter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_selecter"
            android:text="价格区间（元）"
            android:textSize="14sp"
            android:textColor="@color/colorThrText"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_below="@id/price_selecter_text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <EditText
                android:id="@+id/best_lower_price"
                android:layout_width="154dp"
                android:layout_height="36dp"
                android:background="@drawable/wire_frame_bg_type_a"
                android:hint="最低价"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorCutoff"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/best_high_price"
                android:layout_width="154dp"
                android:layout_height="36dp"
                android:background="@drawable/wire_frame_bg_type_a"
                android:hint="最高价"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPageBackground"
                android:text="重置"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/complete_price_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
