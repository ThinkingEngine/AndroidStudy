<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context=".views.activitys.ChangePhoneActivity">

    <include
        android:id="@+id/title_header_change_phone"
        layout="@layout/title_bar_type_two_layout" />

    <RelativeLayout
        android:id="@+id/i_no_what_here"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_below="@id/title_header_change_phone"
        android:layout_marginTop="11dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/phone_mark"
            android:layout_width="48dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/shouji"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_mark"
            android:layout_centerHorizontal="true"
            android:text="您的手机号为187****2544"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    
    <Button
        android:id="@+id/change_phone_buton"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_below="@id/i_no_what_here"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_bg"
        android:layout_marginTop="30dp"
        android:text="更换手机号"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>