<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/exam_advice_mark"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:src="@mipmap/zhujianjianyi" />

    <TextView
        android:id="@+id/exam_advice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/exam_advice_mark"
        android:text="主检建议"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exam_advice_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/exam_advice_mark"
        android:text="综合报告内检查项目给出的建议与指导"
        android:textColor="@color/colorThrText"
        android:textSize="12sp" />

</RelativeLayout>
