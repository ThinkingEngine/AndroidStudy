<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="284dp"
        android:background="@mipmap/dingzhitaocan">

        <TextView
            android:layout_width="182dp"
            android:layout_height="78dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="90dp"
            android:text="希望我们的专业人员为您推荐适合的套餐吗？现在就拨打客服电话联系我们吧。"
            android:textColor="@color/colorSecText"
            android:textSize="14sp" />

        <Button
            android:id="@+id/get_recommend"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="218dp"
            android:background="@drawable/login_button_bg"
            android:text="获取推荐"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/close_recommend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@mipmap/guanbi_white" />

</LinearLayout>
