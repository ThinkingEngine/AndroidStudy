<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/my_exam_container"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/fmailies_item_bg">

        <TextView
            android:id="@+id/exam_target_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:text="体检人:"
            android:textColor="@color/colorThrText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/exam_target_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/exam_target_mark"
            tools:text="周子萱"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appointment_num_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/exam_target_name"
            android:text="预约号:"
            android:textColor="@color/colorThrText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appointment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/appointment_num_mark"
            tools:text="2018033100012"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/exam_item_stats"
            android:layout_width="56dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:src="@mipmap/tijianzhongbiaoqian" />

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/exam_target_mark"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorCutoff"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/my_exam_item_name"
            android:layout_width="244dp"
            android:layout_height="44dp"
            android:layout_below="@id/line4"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            tools:text="常卫清赠关爱父母肿瘤12项升级套餐套餐…"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_exam_item_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            tools:text="预约日期：2018-04-08"
            android:textColor="@color/colorSecText"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/exam_wait_num"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line4"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_wait_person"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/orange_annulus_bg"
                android:gravity="center"
                android:textColor="@color/colorOrange"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="预计报告生成"
                android:textColor="@color/colorThrText"
                android:textSize="10sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/exam_item_code"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginTop="90dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/exam_info"
            android:layout_width="153dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/code_button_bg"
            android:gravity="center"
            android:text="查看检前需知"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </RelativeLayout>

</FrameLayout>
