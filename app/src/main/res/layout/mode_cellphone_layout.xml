<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/title_header_mode_families"
            layout="@layout/message_header_layout"/>

        <EditText
            android:id="@+id/get_number_sms_mode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/title_header_mode_families"
            android:layout_centerHorizontal="true"
            android:background="@drawable/has_bottom_line_no_off_bg"
            android:layout_marginTop="11dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center_vertical"
            android:hint="请输入新的手机号码"
            android:textColor="@color/colorText"
            android:textSize="16sp" />



        <LinearLayout
            android:id="@+id/get_code_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_number_sms_mode"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/has_bottom_line_no_off_bg">

            <EditText
                android:id="@+id/get_code_form_sms_mode"
                android:layout_width="240dp"
                android:layout_height="20dp"
                android:background="@null"
                android:layout_marginLeft="24dp"
                android:hint="请输入验证码"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/get_code_sms_button_mode"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/code_button_bg"
                android:text="获取验证码"
                android:textColor="@color/colorThrText"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>



        <Button
            android:id="@+id/make_mode_button"
            android:layout_width="311dp"
            android:layout_height="44dp"
            android:layout_below="@id/get_code_sms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/login_button_bg"
            android:text="@string/is_ok"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

    </RelativeLayout>
</FrameLayout>
