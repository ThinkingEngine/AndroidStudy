<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title_header_mode_relation"
            layout="@layout/message_header_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_header_mode_relation"
            android:layout_marginTop="11dp"
            android:background="@color/colorWhite">

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/mode_relation_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                app:atg_isAppendMode="true"
                app:atg_textSize="14sp"
                app:atg_textColor="@color/colorThrText"
                app:atg_backgroundColor="@color/colorWhite"
                app:atg_borderColor="@color/colorThrText"
                app:atg_borderStrokeWidth="1dp"
                app:atg_checkedBackgroundColor="@color/colorOrange"
                app:atg_checkedBorderColor="@color/colorOrange"
                app:atg_checkedTextColor="@color/colorWhite"/>


        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
