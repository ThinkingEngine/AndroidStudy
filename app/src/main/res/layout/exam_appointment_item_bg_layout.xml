<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/exam_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selecter_corenr_color_bg"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <TextView
            android:id="@+id/exam_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高血压套餐"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/exam_hot_degree_mark"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/hot"
            android:layout_toRightOf="@id/exam_item_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"/>
        <TextView
            android:id="@+id/exam_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1858.00"
            android:textSize="14dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"/>
        <GridView
            android:id="@+id/item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_below="@id/exam_item_name"
            android:layout_toLeftOf="@id/exam_price_num"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp">
        </GridView>
        <TextView
            android:id="@+id/exam_had_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="118人已检"
            android:textColor="@color/colorSecText"
            android:textSize="12sp"
            android:layout_below="@id/item_mark"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</LinearLayout>
