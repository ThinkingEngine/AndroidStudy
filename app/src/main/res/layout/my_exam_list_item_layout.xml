<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/my_exam_container"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:background="@drawable/fmailies_item_bg"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        
        <TextView
            android:id="@+id/exam_target_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体检人:"
            android:textSize="14sp"
            android:textColor="@color/colorThrText"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/exam_target_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周子萱"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/exam_target_mark"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/appointment_num_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约号:"
            android:textSize="14sp"
            android:textColor="@color/colorThrText"
            android:layout_toRightOf="@id/exam_target_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/appointment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018033100012"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/appointment_num_mark"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"/>
        <ImageView
            android:id="@+id/exam_item_stats"
            android:layout_width="56dp"
            android:layout_height="18dp"
            android:src="@mipmap/tijianzhongbiaoqian"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"/>
        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCutoff"
            android:layout_below="@id/exam_target_mark"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/my_exam_item_name"
            android:layout_width="244dp"
            android:layout_height="44dp"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:text="常卫清赠关爱父母肿瘤12项升级套餐套餐…"
            android:layout_below="@id/line4"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约日期：2018-04-08"
            android:textSize="14sp"
            android:textColor="@color/colorSecText"
            android:layout_below="@id/my_exam_item_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"/>
        
        <ImageView
            android:id="@+id/exam_item_code"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/erweima"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line4"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/exam_info"
            android:layout_width="153dp"
            android:layout_height="30dp"
            android:background="@drawable/code_button_bg"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="查看检前需知"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</LinearLayout>
