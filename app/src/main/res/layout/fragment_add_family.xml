<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context=".views.fragments.AddFamilyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/add_item_a"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/has_bottom_line_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/header_icon"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/select_header_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="77dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_b"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_a"
            android:background="@drawable/has_bottom_line_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/name"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/jingao" />

            <EditText
                android:id="@+id/input_families_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="77dp"
                android:background="@null"
                android:hint="请输入名字"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_c"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_b"
            android:background="@drawable/has_bottom_line_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/sex"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/jingao" />

            <Button
                android:id="@+id/male_mark"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="77dp"
                android:background="@drawable/selecter_corenr_color_bg"
                android:textSize="14sp" />

            <Button
                android:id="@+id/female_mark"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:background="@drawable/selecter_corenr_color_bg"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_d"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_c"
            android:background="@drawable/has_bottom_line_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/age"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/jingao" />

            <EditText
                android:id="@+id/input_families_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="77dp"
                android:background="@null"
                android:hint="请输入年龄"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_e"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_d"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/id_num"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_families_id_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:hint="请输入身份证号"
                android:inputType="number"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_f"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_e"
            android:layout_marginTop="10dp"
            android:background="@drawable/has_bottom_line_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/cellphone_number"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/jingao" />

            <EditText
                android:id="@+id/input_families_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="62dp"
                android:background="@null"
                android:hint="此号码将作为体检时登记号码"
                android:inputType="number"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_item_g"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_f"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/code"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/jingao" />

            <EditText
                android:id="@+id/input_families_code"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="62dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="14sp" />

            <Button
                android:id="@+id/get_code"
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/code_button_bg"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_item_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_item_g"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/position_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="@string/families_relation"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/position_b"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/position_a"
                android:src="@mipmap/jingao" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/families_relation_selecter"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                app:atg_backgroundColor="@color/colorWhite"
                app:atg_borderColor="@color/colorSecText"
                app:atg_checkedBackgroundColor="@color/colorOrange"
                app:atg_checkedBorderColor="@color/colorOrange"
                app:atg_checkedTextColor="@color/colorWhite"
                app:atg_isAppendMode="true"
                app:atg_textColor="@color/colorSecText"
                app:atg_textSize="14sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/commit_families_info_button"
            android:layout_width="311dp"
            android:layout_height="44dp"
            android:layout_below="@id/add_item_h"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_bg"
            android:text="@string/is_ok"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commit_families_info_button"
            android:layout_marginTop="33dp"
            android:layout_centerHorizontal="true"
            android:text="温馨提示：为了保证你顺利的体检和获取报告，请填写准确信息"
            android:textSize="10sp"/>
    </RelativeLayout>

</ScrollView>