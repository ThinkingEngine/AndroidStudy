<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:orientation="vertical"
    tools:context=".module.activitys.SettingActivity">

    <include
        android:id="@+id/title_header_setting"
        layout="@layout/title_bar_type_two_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true">

    </include>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/has_bottom_line_off_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/security_settings"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/liebiaojinru" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/into_common_use"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/has_bottom_line_off_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/common_use"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/liebiaojinru" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/into_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/has_bottom_line_off_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/share"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/liebiaojinru" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/into_feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/has_bottom_line_off_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/feedback"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/liebiaojinru" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/into_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/has_bottom_line_off_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/about"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/liebiaojinru" />


    </RelativeLayout>

    <Button
        android:id="@+id/out_line_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:text="@string/out_line"
        android:textColor="@color/colorText"
        android:textSize="16sp">

    </Button>


</LinearLayout>