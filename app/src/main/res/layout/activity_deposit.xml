<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#0ECFB2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/btnDeposit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.chengsheng.cala.htcm.widget.AppTitleBar
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="充值" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_20">

                <TextView
                    android:id="@+id/tvCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员卡"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="5101 0123 3456 9672"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintTop_toBottomOf="@id/tvCard" />

                <TextView
                    android:id="@+id/tvBalanceTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="可用余额"
                    android:textColor="#FFCCCCCC"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toBottomOf="@id/tvCardNumber" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="￥120.00"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintStart_toEndOf="@id/tvBalanceTip"
                    app:layout_constraintTop_toBottomOf="@id/tvCardNumber" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择充值金额"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAmount200"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="200元"
                        android:textColor="#20D3B3" />

                    <TextView
                        android:id="@+id/tvAmount500"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="500元"
                        android:textColor="#20D3B3" />

                    <TextView
                        android:id="@+id/tvAmount1000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="1000元"
                        android:textColor="#20D3B3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAmount2000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="2000元"
                        android:textColor="#20D3B3" />

                    <TextView
                        android:id="@+id/tvAmount3000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="3000元"
                        android:textColor="#20D3B3" />

                    <TextView
                        android:id="@+id/tvAmount5000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="5000元"
                        android:textColor="#20D3B3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAmount8000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="2000元"
                        android:textColor="#20D3B3" />

                    <TextView
                        android:id="@+id/tvAmountOther"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="2"
                        android:background="@mipmap/qitajine"
                        android:gravity="center"
                        android:text="其他金额"
                        android:textColor="#20D3B3" />

                </LinearLayout>

            </LinearLayout>

            <!--支付方式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zhifubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="支付宝支付"
                        android:textColor="#FF363439"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="#E4E3E5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="微信支付"
                        android:textColor="#FF363439"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>