<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPageBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/doc_advices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="38dp"
            android:textColor="@color/colorSecText"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/login_button_bg" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/doc_signature_mark"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="20dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:backgroundImage="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="23dp"
            android:layout_toLeftOf="@id/doc_signature_mark"
            android:text="主检医生"
            android:textColor="@color/colorThrText"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
