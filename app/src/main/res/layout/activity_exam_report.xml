<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activitys.ExamReportActivity">

    <include
        android:id="@+id/title_header_exam_report"
        layout="@layout/title_bar_type_two_layout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/exam_report_header"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_below="@id/title_header_exam_report"
        app:tabGravity="center">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/exam_report_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exam_report_header">

    </android.support.v4.view.ViewPager>
</RelativeLayout>