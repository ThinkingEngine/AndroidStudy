<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".views.fragments.SMSCodeFragment">

    <include
        android:id="@+id/top_panel_sms"
        layout="@layout/title_bar_type_two_layout"/>

    <EditText
        android:id="@+id/get_number_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_panel_sms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/has_bottom_line_no_off_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="请输入你的手机号码"
        android:paddingBottom="17dp"
        android:textColor="@color/colorText"
        android:textSize="16sp" />



    <LinearLayout
        android:id="@+id/get_code_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/get_number_sms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/has_bottom_line_no_off_bg">

        <EditText
            android:id="@+id/get_code_form_sms"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLength="6"
            android:hint="验证码"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <Button
            android:id="@+id/get_code_sms_button"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/code_button_bg"
            android:textSize="14sp"
            android:text="手机验证码"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>



    <Button
        android:id="@+id/next_button"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_below="@id/get_code_sms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_button_bg"
        android:text="@string/next"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

</RelativeLayout>