<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.activitys.MyExamActivity">
    <include
        android:id="@+id/title_header_my_exam"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        layout="@layout/exam_appointment_header_layout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/my_exam_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/title_header_my_exam"
        app:tabBackground="@color/colorWhite"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="@color/colorThrText">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/my_exam_page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_exam_tab_layout">

    </android.support.v4.view.ViewPager>

</RelativeLayout>