<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activitys.ServiceOrderActivity">

    <include
        android:id="@+id/title_header_service_oder"
        layout="@layout/title_bar_type_four_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/service_order_select_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/title_header_service_oder"
        app:tabBackground="@color/colorWhite"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorThrText" />


    <android.support.v4.view.ViewPager
        android:id="@+id/service_order_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/service_order_select_header" />


</RelativeLayout>