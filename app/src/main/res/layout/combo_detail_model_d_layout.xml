<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/combo_brief_coatiner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/line9"
            android:background="@drawable/has_bottom_line_item_bg">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/dabiaoti_shuxian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="套餐简介"
                android:textColor="@color/colorText"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/combo_brief_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/combo_brief_coatiner"
            android:paddingLeft="27dp"
            android:paddingTop="20dp"
            android:paddingRight="27dp"
            android:paddingBottom="20dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorSecText"
            android:textSize="14sp" />
    </RelativeLayout>
</FrameLayout>
