<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPageBackground">

        <include
            android:id="@+id/title_header_mode_name"
            layout="@layout/message_header_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/title_header_mode_name"
            android:layout_marginTop="11dp"
            android:background="@color/colorWhite">

            <EditText
                android:id="@+id/input_new_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:maxLength="32"
                android:background="@null"
                android:layout_toLeftOf="@id/clean_input"
                android:hint="请输入新的名字"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean_input"
                android:layout_width="54dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/shuruqingkogn"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
