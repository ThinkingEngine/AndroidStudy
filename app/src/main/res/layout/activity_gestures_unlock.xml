<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:orientation="vertical"
    tools:context=".views.activitys.GesturesUnlockActivity">

    <include
        android:id="@+id/title_header_gesture_unlock"
        layout="@layout/title_bar_type_two_layout"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/no_protect_icon"
                android:layout_width="57dp"
                android:layout_height="103dp"
                android:src="@drawable/screen_lock_type_a"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"/>
            <ImageView
                android:id="@+id/no_protect_mark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/screen_select_dot_mark"
                android:layout_below="@id/no_protect_icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorSecText"
                android:text="无需保护"
                android:layout_below="@id/no_protect_icon"
                android:layout_toRightOf="@id/no_protect_mark"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/start_protect_icon"
                android:layout_width="57dp"
                android:layout_height="103dp"
                android:src="@drawable/screen_lock_type_b"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"/>
            <ImageView
                android:id="@+id/start_protect_mark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/screen_select_dot_mark"
                android:layout_below="@id/start_protect_icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorSecText"
                android:text="启动app时"
                android:layout_below="@id/start_protect_icon"
                android:layout_toRightOf="@id/start_protect_mark"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/inapp_protect_icon"
                android:layout_width="57dp"
                android:layout_height="103dp"
                android:src="@drawable/screen_lock_type_c"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"/>
            <ImageView
                android:id="@+id/inapp_protect_mark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/screen_select_dot_mark"
                android:layout_below="@id/inapp_protect_icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorSecText"
                android:text="进入体检报告时"
                android:layout_below="@id/inapp_protect_icon"
                android:layout_toRightOf="@id/inapp_protect_mark"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/setting_gestures_code_button"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:background="@drawable/code_button_bg"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:text="@string/setting_gestures_code"/>
</LinearLayout>