<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/main_page_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            fresco:backgroundImage="@mipmap/taocanxiangqing_banner"
            fresco:actualImageScaleType="fitCenter"/>

        <TextView
            android:id="@+id/combo_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_page_image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:text="老年健康体检套餐"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/combo_hot_mark"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@id/main_page_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/combo_name_detail"
            android:src="@mipmap/hot" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/combo_marks"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/combo_name_detail"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="105dp" />

        <TextView
            android:id="@+id/combo_has_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/combo_marks"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorSecText"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/main_page_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="31dp"
            android:layout_marginRight="13dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/combo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
