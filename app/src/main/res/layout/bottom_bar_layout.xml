<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/cut_off_line_a"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/colorGayLine"
        android:layout_alignParentTop="true"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_below="@id/cut_off_line_a"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/main_page_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/main_page_image"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:src="@drawable/main_page_bg"
                android:layout_marginTop="6dp" />
            <TextView
                android:id="@+id/main_page_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_page"
                android:textSize="10sp"
                android:textColor="@color/colorThrText"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/health_page_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/health_page_image"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:src="@drawable/health_page_bg"
                android:layout_marginTop="6dp" />
            <TextView
                android:id="@+id/health_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/health"
                android:textSize="10sp"
                android:textColor="@color/colorThrText"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/find_page_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/find_page_image"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:src="@drawable/find_page_bg"
                android:layout_marginTop="6dp" />
            <TextView
                android:id="@+id/find_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find"
                android:textSize="10sp"
                android:textColor="@color/colorThrText"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_page_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/mine_page_image"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:src="@drawable/mine_page_bg"
                android:layout_marginTop="6dp" />
            <TextView
                android:id="@+id/mine_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine"
                android:textSize="10sp"
                android:textColor="@color/colorThrText"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
