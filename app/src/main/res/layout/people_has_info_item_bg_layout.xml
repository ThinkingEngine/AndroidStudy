<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/people_has_info_divider_up"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCutoff"
        android:orientation="vertical"
        android:layout_alignParentTop="true"></LinearLayout>

    <LinearLayout
        android:id="@+id/people_has_info_divider_down"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCutoff"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"></LinearLayout>
    
    <ImageView
        android:id="@+id/people_has_info_icon"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:src="@mipmap/tijianbaogao"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/people_has_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/people_has_info_icon"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="@string/medical_exam_report"
        android:textSize="15sp"
        android:textColor="@color/colorForText"/>

    <ImageView
        android:id="@+id/into_people_has_info_detail"
        android:layout_width="6dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/liebiaojinru"/>

</RelativeLayout>
