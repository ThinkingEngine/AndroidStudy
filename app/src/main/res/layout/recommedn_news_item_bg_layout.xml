<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/commend_news_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">
        <LinearLayout
            android:id="@+id/news_item_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCutoff"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

        </LinearLayout>

        <ImageView
            android:id="@+id/news_header_icon"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@mipmap/tuijianzixun_imga"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news_header_icon"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="14dp"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:text="失眠也分类型，你是哪一种？不同类型不同解决办法"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中心热点"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:background="@drawable/rectangle_round_circular"
            android:padding="2dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/news_header_icon"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="14dp"/>
        <TextView
            android:id="@+id/browse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5426"
            android:textSize="12sp"
            android:textColor="@color/colorThrText"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"/>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/yulan"
            android:layout_toLeftOf="@id/browse_num"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="2dp"/>

        <LinearLayout
            android:id="@+id/news_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCutoff"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"/>
    </RelativeLayout>

</LinearLayout>
