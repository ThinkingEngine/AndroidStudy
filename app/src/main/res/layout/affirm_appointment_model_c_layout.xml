<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/others_select_item_coatiner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/line9"
            android:background="@drawable/has_bottom_line_item_bg">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/dabiaoti_shuxian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="其他可选项目"
                android:textColor="@color/colorText"
                android:textSize="16sp" />
        </RelativeLayout>

       <android.support.v7.widget.RecyclerView
           android:id="@+id/other_select_item_recycler"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/others_select_item_coatiner"/>

    </RelativeLayout>
</FrameLayout>
